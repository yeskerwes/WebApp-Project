<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<header>
  <div class="container">
    <a href="/">Home</a>
    <a href="/products">Shop</a>
  </div>
</header>

<div class="container">
  <h2>Your Cart</h2>

  <% items.forEach(i => { %>
    <div class="card">
      <h3><%= i.name %></h3>
      <p class="price">$<%= i.price %></p>
    </div>
  <% }) %>

  <a class="btn" href="/checkout">Checkout</a>
</div>

</body>
</html>
